<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#E91E63</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryDark">#CDDC39</item>
        <item name="colorAccent">#2196F3</item>
        <item name="android:textColorPrimary">#0000FF</item>
    </style>
    <style name="etiquetas" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorEtiqueta</item>
    </style>
    <style name="etiquetas.botones">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>
</resources>